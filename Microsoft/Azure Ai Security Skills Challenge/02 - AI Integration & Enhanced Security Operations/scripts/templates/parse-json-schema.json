{
  "type": "object",
  "properties": {
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "message": {
            "type": "object",
            "properties": {
              "content": {
                "type": "string",
                "description": "GPT-o4-mini response in structured summary report format with sections: THREAT ASSESSMENT, ATTACK ANALYSIS, BUSINESS IMPACT, IMMEDIATE ACTIONS"
              }
            },
            "required": ["content"]
          },
          "finish_reason": {
            "type": "string",
            "enum": ["stop", "length", "content_filter"]
          }
        },
        "required": ["message"]
      }
    },
    "usage": {
      "type": "object",
      "properties": {
        "prompt_tokens": {
          "type": "integer",
          "description": "Tokens used for system prompt (~250 expected)"
        },
        "completion_tokens": {
          "type": "integer", 
          "description": "Tokens used for response (~380 average, 450 max)"
        },
        "total_tokens": {
          "type": "integer",
          "description": "Total token consumption for cost tracking"
        }
      },
      "required": ["total_tokens"]
    }
  },
  "required": ["choices", "usage"]
}
